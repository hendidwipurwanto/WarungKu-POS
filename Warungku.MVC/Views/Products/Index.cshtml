
@{
    ViewData["Title"] = "Product List - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-box fa"></i> Products</h2>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="fas fa-box fa"></i> Product List</h5>
        <button class="btn btn-primary">
            <i class="fas fa-box fa"></i> Add Product
        </button>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Search Products...">
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i> Find
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                       
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>                        
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                       
                        <td>Teh Botol Sosro</td>
                        <td>Beverage</td>
                        <td>Rp.5000</td>
                        <td>30</td>                      
                        <td>
                            <button class="btn btn-sm btn-outline-primary">Details</button>
                            <button class="btn btn-sm btn-outline-primary">Edit</button>
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        
                        <td>Indomie Goreng</td>
                        <td>Food</td>
                        <td>20.000</td>
                        <td>8</td>
                            <td>
                            <button class="btn btn-sm btn-outline-primary">Details</button>
                            <button class="btn btn-sm btn-outline-primary">Edit</button>
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </td>
                    </tr>
                   
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/js/page/product.js"></script>

}

