
@{
    ViewData["Title"] = "List Transaction - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-4"><i class="fas fa-list-alt"></i> List Transaction</h2>

<!-- Search Section -->
<div class="transaction-search">
    <div class="row align-items-end">
        <div class="col-md-3">
            <label><strong>Date Transaction</strong></label>
            <input type="date" class="form-control" value="2025-06-01">
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary">
                <i class="fas fa-search"></i> Find
            </button>
        </div>
    </div>
</div>

<!-- Transaction Table -->

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>

                <th>Date</th>
                <th>User</th>
                <th>Total</th>
                <th>Discount</th>
                <th>Voucher</th>
                <th>Grand Total</th>
            </tr>
        </thead>
        <tbody>
            <tr>

                <td>01-June-2025</td>
                <td>Mr Joe</td>
                <td>11.000</td>
                <td>10%</td>
                <td>250</td>
                <td>9650</td>
            </tr>            
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="~/assets/js/page/transaction.js"></script>

}

