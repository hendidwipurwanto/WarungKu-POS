
@{
    ViewData["Title"] = "List Transaction - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-4"><i class="fas fa-list-alt"></i> List Transaction</h2>

<!-- Search Section -->
<div class="transaction-search">
    <div class="row align-items-end">
        <div class="col-md-3">
            <label><strong>Date Transaction</strong></label>
            <input id="inputSearch" type="text" class="form-control" value="2025-06-01">
        </div>
        <div class="col-md-2">
            <button id="findButton" class="btn btn-primary">
                <i class="fas fa-search"></i> Find
            </button>
        </div>
    </div>
</div>

<!-- Transaction Table -->

<div class="table-responsive">
    <table id="grid" class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>User</th>
                <th>Total</th>
                <th>Discount</th>
                <th>Voucher</th>
                <th>Grand Total</th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts {
    <script src="~/assets/js/page/transaction.js"></script>

}

