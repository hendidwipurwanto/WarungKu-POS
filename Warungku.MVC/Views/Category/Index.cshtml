@{
    ViewData["Title"] = "Category List - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-code-branch"></i> Categories</h2>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="fas fa-code-branch"></i> Category List</h5>
        <button id="addBtn" class="btn btn-primary">
            <i class="fas fa-code-branch"></i> Add Category
        </button>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <input id="inputSearch" type="text" class="form-control" placeholder="Search Categories...">
            </div>
            <div class="col-md-3">
                <button id="findButton" class="btn btn-primary">
                    <i class="fas fa-search"></i> Find
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table id="grid" class="table table-hover">
                <thead>
                    <tr> 
                        <th> Id </th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th> 
                        <th>Action</th>
                    </tr>
                </thead>                
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="cashPaymentModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle" class="modal-title">Cash Payment</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
        </div>
    </div>
</div>
<div id="modal-placeholder"></div>

@section Scripts {
    <script src="~/assets/js/page/category.js"></script>

}
