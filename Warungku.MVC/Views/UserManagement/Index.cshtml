
@{
    ViewData["Title"] = "User Management - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-4"><i class="fas fa-users"></i> User Management</h2>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="fas fa-user-friends"></i> Users List</h5>
        <button id="addBtn" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add User
        </button>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Search users...">
            </div>
            <div class="col-md-3">
                <select class="form-control">
                    <option>All Roles</option>
                    <option>Admin</option>
                    <option>Manager</option>
                    <option>Staff</option>
                </select>
            </div>
        </div>

        <div class="table-responsive">
            <table id="grid" class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Action</th>
                    </tr>
                </thead>               
            </table>
        </div>
    </div>
</div>
<div id="modal-add-placeholder"></div>
<div id="modal-edit-placeholder"></div>
@section Scripts {
    <script src="~/assets/js/page/user.js"></script>

}
