
@{
    ViewData["Title"] = "Dashboard - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-4"><i class="fas fa-tachometer-alt"></i> Dashboard</h2>

<!-- Stats Cards -->
<div class="row">
    <div class="col-md-3">
        <div class="stats-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Total Sales</h6>
                    <h3>Rp 2.5M</h3>
                </div>
                <i class="fas fa-chart-line fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card" style="background: linear-gradient(135deg, #dc3545, #c82333);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Orders</h6>
                    <h3>156</h3>
                </div>
                <i class="fas fa-shopping-cart fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card" style="background: linear-gradient(135deg, #ffc107, #e0a800);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Products</h6>
                    <h3>89</h3>
                </div>
                <i class="fas fa-box fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card" style="background: linear-gradient(135deg, #17a2b8, #138496);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Users</h6>
                    <h3>45</h3>
                </div>
                <i class="fas fa-users fa-2x"></i>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-bar"></i> Sales Overview</h5>
            </div>
            <div class="card-body">
                <canvas id="myAreaChart" height="200"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-clock"></i> Recent Activities</h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-0">
                        <small class="text-muted">2 menit lalu</small><br>
                        Order #001 telah selesai
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <small class="text-muted">5 menit lalu</small><br>
                        User baru terdaftar
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <small class="text-muted">10 menit lalu</small><br>
                        Produk baru ditambahkan
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/page/dashboard.js"></script>
    <script src="~/assets/js/page/Chart.js"></script>

}

