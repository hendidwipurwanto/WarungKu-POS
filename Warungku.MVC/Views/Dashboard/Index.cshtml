
@{
    ViewData["Title"] = "Dashboard - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-4"><i class="fas fa-tachometer-alt"></i> Dashboard</h2>

<!-- Stats Cards -->
<div class="row">
    <div class="col-md-3">
        <div class="stats-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Total Sales</h6>
                    <h3>Rp @ViewBag.totalSales</h3>
                </div>
                <i class="fas fa-chart-line fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card" style="background: linear-gradient(135deg, #dc3545, #c82333);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Categories</h6>
                    <h3>@ViewBag.totalCategory</h3>
                </div>
                <i class="fas fa-code-branch"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card" style="background: linear-gradient(135deg, #ffc107, #e0a800);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Products</h6>
                    <h3>@ViewBag.TotalProduct</h3>
                </div>
                <i class="fas fa-box fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-card" style="background: linear-gradient(135deg, #17a2b8, #138496);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6>Users</h6>
                    <h3>@ViewBag.TotalUsers</h3>
                </div>
                <i class="fas fa-users fa-2x"></i>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/assets/js/page/dashboard.js"></script>
    <script src="~/assets/js/page/Chart.js"></script>

}

