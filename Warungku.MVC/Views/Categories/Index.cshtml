@{
    ViewData["Title"] = "Category List - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-code-branch"></i> Categories</h2>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="fas fa-code-branch"></i> Category List</h5>
        <button class="btn btn-primary">
            <i class="fas fa-code-branch"></i> Add Category
        </button>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Search Categories...">
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i> Find
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                       
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th> 
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                      
                        <td>Food</td>
                        <td>All kind of food</td>
                        <td><span class="badge badge-success">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">Details</button>
                            <button class="btn btn-sm btn-outline-warning">Edit</button>
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </td>
                    </tr>
                    <tr>
                      
                        <td>Baverage</td>
                        <td>All kind of Baverage</td>
                        <td><span class="badge badge-success">Active</span></td>
                       <td>
                            <button class="btn btn-sm btn-outline-primary">Details</button>
                            <button class="btn btn-sm btn-outline-primary">Edit</button>
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/page/category.js"></script>

}
