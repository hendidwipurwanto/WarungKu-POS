
@{
    ViewData["Title"] = "Product List - WarungKu POS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-box fa"></i> Products</h2>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5><i class="fas fa-box fa"></i> Product List</h5>
        <button id="addBtn" class="btn btn-primary">
            <i class="fas fa-box fa"></i> Add Product
        </button>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <input id="inputSearch" type="text" class="form-control" placeholder="Search Products...">
            </div>
            <div class="col-md-3">
                <button id="findButton" class="btn btn-primary">
                    <i class="fas fa-search"></i> Find
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table id="grid" class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>                        
                        <th>Action</th>
                    </tr>
                </thead>
             </table>
        </div>
    </div>
</div>
<div id="modal-add-placeholder"></div>
<div id="modal-edit-placeholder"></div>
@section Scripts {
    <script src="~/assets/js/page/product.js"></script>

}

