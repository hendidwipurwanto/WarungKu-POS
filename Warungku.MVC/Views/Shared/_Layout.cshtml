<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WarungKu | POS</title>
    <!-- Bootstrap CSS 4.6 -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/vendor/datatables/dataTables.bootstrap4.min.css" type="text/css" />
    <link rel="stylesheet" href="~/assets/vendor/fontawesome-free/css/all.min.css" type="text/css" />  
    <link rel="stylesheet" href="~/assets/css/warungku.min.css" type="text/css" />



</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" style="margin-top:-10px; margin-right:-5px;" href="@Url.Action("index","Dashboard")">
                <img src="~/assets/img/logo.png" width="40%" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto" style="margin-left:-30px;">
                    <li class="nav-item">
                        <a id="dashboard" class="nav-link active" href="@Url.Action("index","Dashboard")">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="pointOfSales" class="nav-link" href="@Url.Action("index","PointOfSales")">
                            <i class="fas fa-cash-register"></i> Point Of Sales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="listTransaction" class="nav-link" href="@Url.Action("index","ListTransaction")">
                            <i class="fas fa-list-alt"></i> List Transaction
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="product" class="nav-link" href="@Url.Action("index","Products")">
                            <i class="fas fa-box fa"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="category" class="nav-link" href="@Url.Action("index","Categories")">
                            <i class="fas fa-code-branch"></i> Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a id="user" class="nav-link" href="@Url.Action("index","UserManagement")">
                            <i class="fas fa-users"></i> User Management
                        </a>
                    </li>
                </ul>

                <!-- User Dropdown -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown user-dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user-circle"></i> Hi, Mr. Joe
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">                            
                            <a class="dropdown-item" href="#" onclick="logout()">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Dashboard Section -->
        <div id="dashboard" class="content-section active">
            <div class="container-fluid">
                @RenderBody()
                
            </div>
        </div>        
    </div>

    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/Chart.min.js"></script>
    <script src="~/assets/js/layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-1 mt-4">
        <div class="container">
            Copyright © WarungKu POS 2025
        </div>
    </footer>

</body>
</html>